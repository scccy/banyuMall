<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Property>
        <!-- 使用Spring Boot的spring.application.name作为服务名，如果没有则使用默认值 -->
        <Property name="SERVICE_NAME">${sys:spring.application.name:-unknown-service}</Property>
        <Property name="LOG_FILE_PATH">./logs/${SERVICE_NAME}</Property>
    </Properties>

    <Appenders>
        <!-- 控制台输出 -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <!-- 文件输出 -->
        <RollingFile name="FileAppender" fileName="${LOG_FILE_PATH}/${SERVICE_NAME}.log"
                     filePattern="${LOG_FILE_PATH}/${SERVICE_NAME}-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="100MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <!-- 错误日志文件 -->
        <RollingFile name="ErrorFileAppender" fileName="${LOG_FILE_PATH}/${SERVICE_NAME}-error.log"
                     filePattern="${LOG_FILE_PATH}/${SERVICE_NAME}-error-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="100MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <!-- 异步输出 -->
        <Async name="AsyncConsole">
            <AppenderRef ref="Console"/>
        </Async>
        <Async name="AsyncFile">
            <AppenderRef ref="FileAppender"/>
        </Async>
        <Async name="AsyncErrorFile">
            <AppenderRef ref="ErrorFileAppender"/>
        </Async>
    </Appenders>

    <Loggers>
        <!-- 根日志级别 -->
        <Root level="info">
            <AppenderRef ref="AsyncConsole"/>
            <AppenderRef ref="AsyncFile"/>
        </Root>

        <!-- 错误日志单独记录 -->
        <Logger name="ERROR" level="error" additivity="false">
            <AppenderRef ref="AsyncErrorFile"/>
        </Logger>

        <!-- 应用日志 -->
        <Logger name="com.origin" level="debug" additivity="false">
            <AppenderRef ref="AsyncConsole"/>
            <AppenderRef ref="AsyncFile"/>
        </Logger>

        <!-- 微服务特定日志 -->
        <Logger name="com.origin.auth" level="debug" additivity="false">
            <AppenderRef ref="AsyncConsole"/>
            <AppenderRef ref="AsyncFile"/>
        </Logger>

        <Logger name="com.origin.user" level="debug" additivity="false">
            <AppenderRef ref="AsyncConsole"/>
            <AppenderRef ref="AsyncFile"/>
        </Logger>

        <!-- Spring框架日志 -->
        <Logger name="org.springframework" level="info" additivity="false">
            <AppenderRef ref="AsyncConsole"/>
            <AppenderRef ref="AsyncFile"/>
        </Logger>

        <!-- MyBatis日志 -->
        <Logger name="com.baomidou.mybatisplus" level="debug" additivity="false">
            <AppenderRef ref="AsyncConsole"/>
            <AppenderRef ref="AsyncFile"/>
        </Logger>

        <!-- Redis日志 -->
        <Logger name="org.springframework.data.redis" level="info" additivity="false">
            <AppenderRef ref="AsyncConsole"/>
            <AppenderRef ref="AsyncFile"/>
        </Logger>

        <!-- 阿里云OSS日志 -->
        <Logger name="com.aliyun.oss" level="info" additivity="false">
            <AppenderRef ref="AsyncConsole"/>
            <AppenderRef ref="AsyncFile"/>
        </Logger>

        <!-- 第三方库日志级别调整 -->
        <Logger name="org.apache.http" level="warn" additivity="false">
            <AppenderRef ref="AsyncConsole"/>
            <AppenderRef ref="AsyncFile"/>
        </Logger>

        <Logger name="org.apache.commons" level="warn" additivity="false">
            <AppenderRef ref="AsyncConsole"/>
            <AppenderRef ref="AsyncFile"/>
        </Logger>
    </Loggers>
</Configuration> 