<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.origin.user.mapper.UserProfileMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.origin.user.entity.UserProfile">
        <id column="profile_id" property="profileId"/>
        <result column="real_name" property="realName"/>
        <result column="company_name" property="companyName"/>
        <result column="company_address" property="companyAddress"/>
        <result column="contact_person" property="contactPerson"/>
        <result column="contact_phone" property="contactPhone"/>
        <result column="industry" property="industry"/>
        <result column="description" property="description"/>
        <result column="created_time" property="createdTime"/>
        <result column="updated_time" property="updatedTime"/>
        <result column="created_by" property="createdBy"/>
        <result column="updated_by" property="updatedBy"/>
        <result column="deleted" property="deleted"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        profile_id, real_name, company_name, company_address, contact_person, 
        contact_phone, industry, description, created_time, updated_time, 
        created_by, updated_by, deleted
    </sql>

    <!-- 根据扩展信息ID查询用户扩展信息 -->
    <select id="selectByProfileId" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List"/>
        FROM user_profile 
        WHERE profile_id = #{profileId} 
        AND deleted = 0
    </select>

</mapper> 